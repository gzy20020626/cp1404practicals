BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        id: main_layout

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
            text: "Create Labels"
            on_press: app.create_labels()
        Button:
            text: "Clear Labels"
            on_press: app.clear_all_labels()